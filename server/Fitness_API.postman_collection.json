          "name": "Get User Goals",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/fitness/goals/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "fitness", "goals", "{{user_id}}"]
