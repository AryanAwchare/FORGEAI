          "name": "Create Goal",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{user_id}}\",\n  \"goalType\": \"weight_loss\",\n  \"target\": \"Lose 10kg\",\n  \"deadline\": \"2024-12-31\",\n  \"description\": \"Lose weight through consistent exercise and diet\"\n}"
            },
            "url": {
