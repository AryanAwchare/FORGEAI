          "name": "Update Goal",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"completed\",\n  \"progress\": 100\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/fitness/goals/:goalId",
              "host": ["{{base_url}}"],
              "path": ["api", "fitness", "goals", ":goalId"]
